{
  "compilerOptions": {
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": ".",
    "target": "es2022",
    "module": "es2022",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "react", "react-dom", "vite/client", "vitest/globals"]
  }
}
